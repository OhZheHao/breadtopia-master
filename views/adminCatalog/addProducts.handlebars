<body class="bg-dark">
	<div class="container">
		<div class="card card-body bg-dark">
			<h3 class="text-light">Add Products</h3>
			<form action="" method="post">
				<div class="row mb-3">
					<div class="col-lg-9">
						<div class="form-group">

							<label class="font-italic text-light" for="item">Item Name</label>
							<input class="form-control bg-secondary text-light" id="item" name="item" />
						</div>
						<div class="form-group mb-4">
							<label class="font-italic text-light" for="description">Description</label>
							<textarea class="form-control bg-secondary text-light" id="description" name="description" rows="7"
								maxlength="2000"></textarea>
						</div>
					</div>
					<div class="col-lg-3">
						<div class="custom-file mb-2">
							<input type="file" class="custom-file-input bg-secondary" id="posterUpload" name="posterUpload"
								accept="image/png,image/jpeg,image/jpg,image/gif">
							<label class="custom-file-label" for="customFile">Choose File</label>
						</div>
						<div class="text-danger small mb-2" id="posterErr" style="display:none"></div>
						<img id="poster" src="/img/no-image.jpg" alt="Poster" class="border img-thumbnail img-fluid">
						<input class="bg-secondary" id="posterURL" type="hidden" name="posterURL">
					</div>
				</div>

				<div class="form-group">
					<div class="row mb-2">
						<div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
							<label class="font-italic text-light">Date of release</label>
							<input class="bg-secondary text-light" id="datepicker" width="200" name="dateRelease" readonly />
						</div>
						<div class="col-12 col-sm-12 col-md-12 col-lg-6">
							<label class="font-italic text-light">Price</label>
							<br>

							<input class="bg-secondary text-light" type="number" name="price" id="price" min="0" max="9999" step="any">
						</div>
					</div>
					<div class="row mb-2">
						<div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
							<label class="font-italic text-light">Quantity</label>
							<br>

							<input class="bg-secondary text-light" type="number" name="quantity" id="quantity" min="0" max="9999" step="any">
						</div>
					</div>
				</div>
		</div>
		<br>
		<button id="btnSubmit" type="submit" class="btn btn-primary">Save
		</button>
		</form>
	</div>


	<script>
		$('#datepicker').datepicker({
			format: 'dd/mm/yyyy',
			uiLibrary: 'bootstrap4',
			value: moment().format('DD/MM/YYYY'),
		});
	</script>
</body>