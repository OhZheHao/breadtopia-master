<body class="bg-dark">
    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light text-light">Product Management</h1>
                <p class="lead text-light">manage all products in catalog</p>
                <hr class="featurette-divider">
            </div>
        </div>
    </section>


    <div class="container bg-secondary rounded">
        <div class="table-wrap">
            <table class="table text-center">
                <thead>
                    <th>ID</th>
                    <th>Image</th>
                    <th>Product</th>
                    <th>Desc</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Date</th>
                    <th>&nbsp;</th>
                </thead>
                {{#if products}}
                <tbody>
                    {{#each products}}
                    <tr class="align-middle alert border-bottom text-center" role="alert">
                        <td>
                            {{id}}
                        </td>
                        <td>
                            <img class="img-responsive" src="{{posterURL}}" height="100" width="100" alt="">
                        </td>
                        <td>
                            <div>
                                <p class="fw-bold">{{item}}</p>
                            </div>
                        </td>
                        <td>
                            <p>
                                {{description}}
                            </p>
                        </td>
                        <td>
                            <div class="fw-600">${{price}}</div>
                        </td>
                        <td class="d-">
                            {{quantity}}
                        </td>
                        <td class="text-wrap" style="width: 6rem;">
                            {{formatDate dateRelease 'DD MMM YYYY'}}
                        </td>
                        <td>
                            <p>
                                <a href="/adminCatalog/editProducts/{{id}}" class="card-link mb-2 text-warning">
                                    <i class="fas fa-pencil-alt text-warning"></i>
                                    Edit
                                </a>
                                <br>
                                <a href="/adminCatalog/deleteProducts/{{id}}" class="card-link text-danger"
                                    data-toggle="confirmation" data-title="Confirm delete?">
                                    Delete
                                    <i class="far fa-trash-alt text-danger"></i>
                                </a>
                            </p>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                {{/if}}
            </table>
        </div>
    </div>

    <script>
        $('[data-toggle=confirmation]').confirmation({
            rootSelector: '[data-toggle=confirmation]',
        });
    </script>
</body>