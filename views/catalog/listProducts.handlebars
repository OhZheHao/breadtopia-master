<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">PRODUCTS</h1>
            <p class="lead text-muted">yumyum fr ong moment</p>
            <hr class="featurette-divider">
        </div>
    </div>
</section>
{{#if products}}
<div class="album py-5 text-dark">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            {{#each products}}
            <div class="col">
                <div class="card shadow-sm">
                    <a href="{{posterURL}}">
                        <img src="{{posterURL}}" alt="Poster" class="img-thumbnail img-fluid mb-2"
                            onerror="this.src='/img/no-image.jpg'" style="max-height:160px">
                    </a>
                    <div class="card-body">
                        <h3>{{item}}</h3>
                        <div class="mb-3">
                            {{description}}
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">view</button>
                            </div>
                            <small class="text-muted">
                                S${{price}}
                            </small>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-0">
                            <p class="mb-0">
                                <a href="/catalog/editProducts/{{id}}" class="card-link mb-2">
                                    <i class="fas fa-pencil-alt"></i>
                                    Edit
                                </a>
                            </p>
                            <p class="mb-0">
                                <a href="/catalog/deleteProducts/{{id}}" class="card-link" data-toggle="confirmation"
                                    data-title="Confirm delete?">
                                    <i class="far fa-trash-alt"></i>
                                    Delete
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}


        </div>
    </div>
</div>
{{/if}}

